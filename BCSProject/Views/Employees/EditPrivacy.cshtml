@using BCSProject.Helpers
@model List<BCSProject.Models.PrivacyEmployeeViewModel>

<h3>Employee Details</h3>
<hr />

<div class="container">
    @using (Html.BeginForm())
    {
        for (int count = 0; count < Model.Count(); count++)
        {
            @Html.HiddenFor(x => x[count].Id)
            @Html.HiddenFor(x => x[count].CharacteristicId)
            @Html.HiddenFor(x => x[count].EmployeeId)
            @Html.HiddenFor(x => x[count].Characteristic.ColumnName)
            @Html.HiddenFor(x => x[count].Characteristic.ColumnText)
            @Html.HiddenFor(x => x[count].Characteristic.Id)
            <div class="form-row">
                <div class="form-group col-4">
                    <label class="control-label">Property</label>
                    @Html.TextBoxFor(x => x[count].Characteristic.ColumnText, htmlAttributes: new { @class = "form-control", @readonly = true })
                </div>

                <div class="form-group col-2">
                    <label class="control-label">Public or Private</label>
                    @Html.DropDownListFor(x => x[count].IsPublic, WebHelper.PrivatePublicOptions(Model[count].IsPublic), new { @class = "form-control" })
                </div>
                <div class="clearfix"></div>
            </div>
        }
        <input type="submit" id="btn-submit" value="Submit" class="btn btn-primary" />

    }
</div>
